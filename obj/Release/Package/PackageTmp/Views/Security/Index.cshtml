                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="button" ng-click="login()" id="btnLogin1" ng-disabled="initSelectProject">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>*@
</div>



